<h1>Add a new review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'Back', restaurant_path(@restaurant) %></p>
<p><%= link_to 'Back home', restaurants_path %></p>
